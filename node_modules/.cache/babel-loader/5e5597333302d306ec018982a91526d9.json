{"ast":null,"code":"import Note from \"./Note.vue\";\nlet id = 0;\nexport default {\n  name: \"PostIt\",\n  props: {\n    msg: Array\n  },\n  components: {\n    Note\n  },\n\n  data() {\n    return {\n      hide: false,\n      stickys: []\n    };\n  },\n\n  mounted() {\n    if (localStorage.getItem(\"stickys\")) {\n      try {\n        this.stickys = JSON.parse(localStorage.getItem(\"stickys\"));\n      } catch (e) {\n        localStorage.removeItem(\"stickys\");\n      }\n    }\n\n    if (localStorage.id) {\n      id = localStorage.id;\n    }\n  },\n\n  methods: {\n    addSticky() {\n      this.stickys.push({\n        id: id++,\n        title: `My ${id} PostIt`,\n        text: this.text\n      });\n    },\n\n    save() {\n      const parsed = JSON.stringify(this.stickys);\n      localStorage.setItem(\"stickys\", parsed);\n      localStorage.getItem(\"stickys\");\n      localStorage.id = id;\n    },\n\n    hideDelete() {\n      this.hide = !this.hide;\n    },\n\n    removeSticky(sticky) {\n      this.stickys = this.stickys.filter(t => t !== sticky);\n    },\n\n    goToNote() {\n      this.$router.push(\"/note\");\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAqCA,OAAOA,IAAP,MAAiB,YAAjB;AAEA,IAAIC,EAAC,GAAI,CAAT;AACA,eAAe;AACdC,MAAI,EAAE,QADQ;AAEdC,OAAK,EAAE;AACNC,OAAG,EAAEC;AADC,GAFO;AAKdC,YAAU,EAAE;AACXN;AADW,GALE;;AAQdO,MAAI,GAAG;AACN,WAAO;AACNC,UAAI,EAAE,KADA;AAENC,aAAO,EAAE;AAFH,KAAP;AAIA,GAba;;AAcdC,SAAO,GAAG;AACT,QAAIC,YAAY,CAACC,OAAb,CAAqB,SAArB,CAAJ,EAAqC;AACpC,UAAI;AACH,aAAKH,OAAL,GAAeI,IAAI,CAACC,KAAL,CAAWH,YAAY,CAACC,OAAb,CAAqB,SAArB,CAAX,CAAf;AACD,OAFA,CAEE,OAAOG,CAAP,EAAU;AACXJ,oBAAY,CAACK,UAAb,CAAwB,SAAxB;AACD;AACD;;AACA,QAAIL,YAAY,CAACV,EAAjB,EAAqB;AACpBA,QAAC,GAAIU,YAAY,CAACV,EAAlB;AACD;AACA,GAzBa;;AA0BdgB,SAAO,EAAE;AACRC,aAAS,GAAG;AACX,WAAKT,OAAL,CAAaU,IAAb,CAAkB;AAAElB,UAAE,EAAEA,EAAE,EAAR;AAAYmB,aAAK,EAAG,MAAKnB,EAAE,SAA3B;AAAsCoB,YAAI,EAAE,KAAKA;AAAjD,OAAlB;AACA,KAHO;;AAIRC,QAAI,GAAG;AACN,YAAMC,MAAK,GAAIV,IAAI,CAACW,SAAL,CAAe,KAAKf,OAApB,CAA